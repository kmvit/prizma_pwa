DATABASE_URL=sqlite+aiosqlite:///./data/prizma.db
SECRET_KEY=your-secret-key-change-in-production
FRONTEND_URL=http://localhost:5173

# Telegram: для авторизации и уведомлений
TELEGRAM_BOT_TOKEN=

# Web Push (VAPID): сгенерировать: python -m py_vapid --gen
# VAPID_PRIVATE_KEY=путь_к_private_key.pem или PEM-строка
# VAPID_PUBLIC_KEY=публичный_ключ_base64

# SMTP: для email-уведомлений (те же сообщения, что в Telegram)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true

# Perplexity AI: для ИИ-анализа отчётов
PERPLEXITY_API_KEY=
PERPLEXITY_ENABLED=false

# Robokassa: для продакшена заполните и установите ROBOKASSA_TEST=0
ROBOKASSA_LOGIN=
ROBOKASSA_PASSWORD_1=
ROBOKASSA_PASSWORD_2=
ROBOKASSA_TEST=1

PREMIUM_PRICE_ORIGINAL=1.00
PREMIUM_PRICE_DISCOUNT=1.00
