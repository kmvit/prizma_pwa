DATABASE_URL=sqlite+aiosqlite:///./data/prizma.db
SECRET_KEY=your-secret-key-change-in-production
FRONTEND_URL=http://localhost:5173

# Telegram: для авторизации и уведомлений
TELEGRAM_BOT_TOKEN=

# Web Push (VAPID): python -m py_vapid --gen (создаст private_key.pem)
# VAPID_PRIVATE_KEY=private_key.pem  (путь к файлу)
# VAPID_PUBLIC_KEY= — извлечь: cd backend && python -m scripts.extract_vapid_public
#    Вставить длинную base64 строку! НЕ путь к файлу.

# SMTP: для email-уведомлений (те же сообщения, что в Telegram)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true

# Perplexity AI: для ИИ-анализа отчётов
PERPLEXITY_API_KEY=
PERPLEXITY_ENABLED=false

# Robokassa: для продакшена заполните и установите ROBOKASSA_TEST=0
ROBOKASSA_LOGIN=
ROBOKASSA_PASSWORD_1=
ROBOKASSA_PASSWORD_2=
ROBOKASSA_TEST=1

PREMIUM_PRICE_ORIGINAL=1.00
PREMIUM_PRICE_DISCOUNT=1.00
